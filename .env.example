# AI API Configuration
# Choose one of the following AI providers:

# OpenRouter API Key (recommended for multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Alternative: OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# MiniKit API Key (for Base Mini App integration)
NEXT_PUBLIC_MINIKIT_API_KEY=your_minikit_api_key_here

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Database Configuration (for production - replace file-based storage)
# DATABASE_URL=your_database_connection_string

# Analytics and Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn
# ANALYTICS_KEY=your_analytics_key

# Payment Processing (for premium subscriptions)
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
